<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/vMovieSectionHighlight"
        android:layout_width="0dp"
        android:layout_height="6dp"
        android:background="#4B65FF"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@+id/tvMovieSectionTitle"
        app:layout_constraintEnd_toEndOf="@+id/tvMovieSectionTitle"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tvMovieSectionTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lato"
        android:layout_marginTop="16dp"
        android:textColor="@color/text_color"
        android:textSize="30sp"
        android:textStyle="bold"
        android:text="@string/popular_movies"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vMovieSectionHighlight"/>

</androidx.constraintlayout.widget.ConstraintLayout>